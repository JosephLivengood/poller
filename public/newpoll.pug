doctype html
html(lang="en")
    head
        //-title= Poller
        link(href='/css/style.css', rel='stylesheet')
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='' )
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
 
    body
        block content
            .main.container
                .row
                  .col-md-6.col-md-offset-3
                    h1.display-4.m-b-2 New Poll
                    div.progress
                        .progress-bar.progress-bar-striped.active(role='progressbar', aria-valuenow='45', aria-valuemin='0', aria-valuemax='100', style='width: 45%')
                            span.sr-only 45% Complete
                    form(method='POST' action='/registerpoll')
                      div.form-group
                        label(for='question') Question:
                        input#question.form-control(type='text', placeholder='Be sure to be original and imaginative!' name='question')
                      div.form-group
                        label(for='selectbasic') Select Category
                        select#selectbasic.form-control(name='selectbasic')
                            option(value='rs') General Runescape
                            option(value='rs3') Runescape3
                            option(value='osrs') Os Runescape
                            option(value='dmm') Deadman Mode
                            option(value='ot') Off-Topic
                      div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' name='password')
                      button.btn.btn-primary(type='submit') Submit Poll!
                      
        script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )